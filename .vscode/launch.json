{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug SPH",
            "type": "cppvsdbg",
            "request": "launch",
            "justMyCode": true,
            // Resolved by CMake Tools:
            "program": "${workspaceFolder}/bin/SPHSimulator_d.exe",
            "args": ["--no-initial-pause"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ],
            "console": "integratedTerminal",

        }
    ]
}